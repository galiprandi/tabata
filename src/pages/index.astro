---
import GoToTrain from '@components/GoToTrain.astro'
import Layout from '../layouts/layout.astro'
import InstallApp from '@components/InstallApp.astro'
import ShareApp from '@components/ShareApp.astro'
import GoToSettings from '@components/GoToSettings.astro'
---

<Layout>
  <section class="display">
    <div id="title">Tabata Timer</div>
  </section>

  <nav class="buttons">
    <GoToSettings />
    <GoToTrain />
  </nav>

  <footer>
    <ShareApp />
    <InstallApp />
  </footer>
</Layout>

<script>
  import { play } from '@assets/audio'
  import { onClick } from '@assets/domHelpers'

  document.addEventListener('DOMContentLoaded', () => {
    onClick('#btn-routine-config', async () => {
      await play('tap', true)
      window.location.href = '/tabata/settings'
    })
  })
</script>

<style>
  #title {
    font-size: 10vw;
    font-weight: bold;
  }

  .buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3em;
  }

  #go {
    min-width: 10em;
  }

  footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1em;
  }
</style>
