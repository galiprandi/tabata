---
import Layout from '../layouts/layout.astro'

const date = new Date()
  .toLocaleDateString('es-AR')
  .split('/')
  .map(n => n.padStart(2, '0'))
  .reverse()
  .join('')
const version = `v${date}`
---

<Layout>
  <section class="display">
    <div id="title">Wellcome</div>
  </section>
  <footer>
    <button id="settings" class="secondary">Settings</button>
    <button id="go">Go</button>
  </footer>
  <small id="version">{version}</small>
  <img id='qr_link' src='/tabata/qr_link.svg' alt='Scan to open in your phone' width={50} height={50}/>
  <dialog id="dialog" >
    <div>
      <img id='qr_link_big' src='/tabata/qr_link.svg' alt='Tap image to share' />
      <br />
      <small>Tap image to share with your friends!</small>
    </div>
  </dialog>
</Layout>

<style>
  footer {
    display: flex;
    justify-content: center;
    gap: 2em;
  }

  #title {
    font-size: 10vw;
    font-weight: bold;
  }

  #version {
    position: absolute;
    left: 0;
    bottom: 0;
    font-size: 0.7em;
    padding: 0.5em;
  }

  #qr_link {
    position: absolute;
    right: 0;
    bottom: 0;
    margin: 0.5em;
  }

  #qr_link_big {
    max-height: 70vh;
    max-width: 70vw;
  }
</style>

<script>
  import { play } from '../assets/main'

  const shareData = {
  title: 'Tabata Timer',
  text: "Check this out, I'm using this Tabata Timer every day",
  url: location.href,
};

  document.addEventListener('DOMContentLoaded', () => {
    const openDialog = document.getElementById('qr_link') as HTMLImageElement
    const dialog = document.getElementById('dialog') as HTMLDialogElement
    const shareButton = document.getElementById('qr_link_big') as HTMLButtonElement
    const settings = document.getElementById('settings') as HTMLButtonElement
    const go = document.getElementById('go') as HTMLButtonElement

    openDialog.addEventListener('click', async () => {
      await play('tap', true)
      dialog.showModal()
    })

    shareButton.addEventListener('click', async () => {
      await play('tap', true)
      if (navigator.share) navigator.share(shareData)
       dialog.close()
    })

    settings.addEventListener('click', async () => {
      await play('tap', true)
      location.href = '/tabata/settings'
    })

    go.addEventListener('click', async () => {
      await play('tap', true)
      location.href = '/tabata/start'
    })
  })
</script>
